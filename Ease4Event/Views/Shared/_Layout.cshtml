<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ease4Event</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ease4Event.styles.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #0a192f, #112d4e);
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-attachment: fixed;
            color: #f0f4f8;
        }

        .navbar {
            background-color: #0f2c4d;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: #00bfa6 !important;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            color: #d6f8ff !important;
        }

        .container {
            padding: 0.5rem;
            border-radius: 1rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        footer {
            border-top: 1px solid #1e3a5f;
            padding: 0.5rem 0;
        }

            footer a {
                color: #66fcf1 !important;
            }

        a {
            color: #00bfa6;
            text-decoration: none;
        }

            a:hover {
                color: #14ffe9;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Event" asp-action="Index">Ease4Event</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Event" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-muted">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Ease4Event</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
